<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/layoutTweetVideo">
            <android.support.v7.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/view2"
                app:cardCornerRadius="30dp"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.6">
                <ImageView
                    android:layout_height="60dp"
                    android:layout_width="match_parent"
                    android:id="@+id/imageAvatar2"
                    android:src="@drawable/avatar"
                    android:scaleType="fitXY"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>
            </android.support.v7.widget.CardView>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtUserName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    tool:text="Hai Nguyen"/>

                <TextView
                    android:id="@+id/txtRealName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:layout_marginLeft="5dp"
                    tool:text="d@HaiNguyen"/>
                <TextView
                    android:id="@+id/txtTimeStamp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:layout_marginLeft="5dp"
                    tool:text="1h"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/txtText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorLink="#1E88E5"
                android:autoLink="web"
                android:textColor="@android:color/white"
                tool:text="Linh ta linh tinh"/>

            <VideoView
                android:id="@+id/vdTweet"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="350dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4">
                <ImageView
                    android:id="@+id/img_ic_reply2"
                    android:layout_marginTop="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_reply"/>
                <TextView
                    android:id="@+id/txtCountComment2"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/gray"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    tool:text="1234"/>
                <ImageView
                    android:id="@+id/img_ic_retweet2"
                    android:layout_marginTop="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_retweet"/>
                <TextView
                    android:id="@+id/txtCpuntReply2"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/gray"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/img_ic_favourite2"
                    android:layout_marginTop="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_heart"/>
                <TextView
                    android:id="@+id/txtCountFavourit2"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/gray"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/img_ic_message2"
                    android:layout_marginTop="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_message"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>